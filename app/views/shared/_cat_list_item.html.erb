<li id="<%= cat_list_item.id %>">
  <div class="col-md-10">
  <div class="panel panel-default">
    <div class="panel-heading">
	     <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseOne<%= cat_list_item.id %>">
        			<%= cat_list_item.name %>
          </a>
        </h4>        
    </div>
    <div id="collapseOne<%= cat_list_item.id %>" class="panel-collapse collapse">
      <div class= "panel-body">  	 
        <div class="formats">
        <% if cat_list_item.format_feed.any? %>
          <h4>Formats</h4>
          <ol class = "formats-list">
            <% cat_list_item.format_feed.each do |item| %>
                <li><%= item.name %></li>
            <% end %>
          </ol>
        <% else %>
          <h4>All formats.</h4>
        <% end %>
        </div>
        <div class="chains">
        <% if cat_list_item.chain_feed.any? %>
          <h4>Chains</h4>
          <ol class = "chains-list">
            <% cat_list_item.chain_feed.each do |item| %>
              <li><%= item.name %></li>
            <% end %>
          </ol>
        <% else %>
          <h4>All chais.</h4>
        <% end %>
        </div>
        <span class="timestamp"><%= cat_list_item.created_at.strftime("Listed on %d/%m/%Y") %></span><br>
        <% if current_user?(cat_list_item.user) %>
          <%= link_to "drop", cat_list_item, method: :patch, data: { confirm: "Are you sure?"}, title: cat_list_item.name %>
        <% end %>
      </div>       
    </div>
  </div>
  </div>
  <div class="col-md-2">
    <h4 id="count"><%= cat_list_item.cat_count %></h4>
  </div>        
</li>