<li id="<%= seg_list_item.id %>">
  <div class="panel panel-default">
    <div class="panel-heading">
	     <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseOne<%= seg_list_item.id %>">
        			<%= seg_list_item.name %>
          </a>
        </h4>
    </div>
    <div id="collapseOne<%= seg_list_item.id %>" class="panel-collapse collapse">
      <div class= "panel-body">  	 
            <% if seg_list_item.gender.present? %>
              <span class="segment-gender">Gender: <%= seg_list_item.gender %></span><br>
            <% else %>
              <span class="segment-gender">Gender: all</span><br>
            <% end %>
            <% if seg_list_item.age_min.present? && seg_list_item.age_max.present? %>
              <% age_range = "Age range: #{seg_list_item.age_min} - #{seg_list_item.age_max} y.o." %>
            <% elsif seg_list_item.age_min.present? && seg_list_item.age_max.nil? %>
              <% age_range = "Age range: above #{seg_list_item.age_min} y.o." %>
            <% elsif seg_list_item.age_min.nil? && seg_list_item.age_max.present? %>
            <% age_range = "Age range: below #{seg_list_item.age_max} y.o." %>
            <% else %>
              <% age_range = "Age range: all" %>
            <% end %>
            <span class="segment-age"><%= age_range %></span><br>
            <% if seg_list_item.income.present? %>
              <span class="segment-income">Income level: <%= seg_list_item.income %></span><br>
            <% else %>
              <span class="segment-income">Income level: all</span><br>
            <% end %>
            <span class="timestamp"><%= seg_list_item.created_at.strftime("Listed on %d/%m/%Y") %></span><br>
            <% if current_user?(seg_list_item.user) %>
              <%= link_to "drop", seg_list_item, method: :patch, data: { confirm: "Are you sure?"}, title:    seg_list_item.name %>
            <% end %>
      </div>       
    </div>
  </div>        
</li>
      				